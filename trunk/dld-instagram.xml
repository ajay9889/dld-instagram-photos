<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
	<ModulePrefs title="Difluir Instagram" author="Difluir" description="Instagram photos" author_email="difluir@gmail.com" height="200" /> 
	<UserPref name="instauser" display_name="User" required="true" />
	<UserPref name="instatoken" display_name="Access Token" required="true" />	
	<UserPref name="instasize" display_name="Photo Size" default_value="small" datatype="enum" >
		<EnumValue value="small" />
		<EnumValue value="medium" />
		<EnumValue value="large" />
	</UserPref> 
	<UserPref name="instacount" display_name="Limit Photos" default_value="6" />
	<Content type="html">
	<![CDATA[
<ul id="dld_instagram_box"></ul>
<script src="http://dld-instagram-photos.googlecode.com/svn/trunk/instagram.js"></script>
<script type="text/javascript">
var prefs = new gadgets.Prefs();
instagram( 'dld_instagram_box', prefs.getString('instauser'), prefs.getString('instatoken'), prefs.getString('instacount'), prefs.getString('instasize') );
</script>
	]]>
	</Content>
</Module>
